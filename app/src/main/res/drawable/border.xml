<!-- res/drawable/sudoku_board_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 最外层粗红框（4dp） -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#666666"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>

    <!-- 内部棋盘背景 -->
    <item android:padding="4dp">
        <shape android:shape="rectangle">
            <!-- 内部细线网格 -->
            <stroke
                android:width="1dp"
                android:color="#666666"/>
        </shape>
    </item>
</layer-list>